<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mappers.StatusMapper">

	<resultMap type="com.example.demo.entity.Status" id="statusResultMap">
		<result property="stId" column="st_id" />
		<result property="stName" column="st_name" />
	</resultMap>

	<select id="getAllStatus" resultMap="statusResultMap">
		SELECT *
		FROM gst_status
	</select>

	<select id="findStatusById" parameterType="java.lang.Integer" resultMap="statusResultMap">
		SELECT * 
		FROM gst_status 
		WHERE st_id = #{stId}
	</select>
	
</mapper>